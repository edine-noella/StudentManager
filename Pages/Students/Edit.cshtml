@page "{id:int}"
@model StudentManager.Pages.Students.Edit

<h2>Edit Student</h2>

<form method="post">
    <div>
        <label asp-for="Student.FullName"></label>
        <input asp-for="Student.FullName" />
        <span asp-validation-for="Student.FullName"></span>
    </div>

    <div>
        <label asp-for="Student.Age"></label>
        <input asp-for="Student.Age" />
        <span asp-validation-for="Student.Age"></span>
    </div>

    <div>
        <label asp-for="Student.City"></label>
        <input asp-for="Student.City" />
        <span asp-validation-for="Student.City"></span>
    </div>

    <div>
        <label asp-for="Student.EnrollmentDate"></label>
        <input asp-for="Student.EnrollmentDate" type="date" />
        <span asp-validation-for="Student.EnrollmentDate"></span>
    </div>

    <button type="submit">Save</button>
</form>
