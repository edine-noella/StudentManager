@page "{id:int}"
@model StudentManager.Pages.Students.Edit

<h2>Edit Student</h2>

<form method="post">
    <div>
        <label asp-for="Student.Name"></label>
        <input asp-for="Student.Name" />
        <span asp-validation-for="Student.Name"></span>
    </div>

    <div>
        <label asp-for="Student.Email"></label>
        <input asp-for="Student.Email" />
        <span asp-validation-for="Student.Email"></span>
    </div>

    <div>
        <label asp-for="Student.EnrollmentDate"></label>
        <input asp-for="Student.EnrollmentDate" type="date" />
        <span asp-validation-for="Student.EnrollmentDate"></span>
    </div>

    <button type="submit">Save</button>
</form>
