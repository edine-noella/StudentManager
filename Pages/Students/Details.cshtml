@page "{id:int}"
@model StudentManager.Pages.Students.Details

<h2>Student Details</h2>

<div>
    <strong>Name:</strong> @Model.Student.FullName
</div>
<div>
    <strong>Age:</strong> @Model.Student.Age
</div>
<div>
    <strong>City:</strong> @Model.Student.City
</div>
<div>
    <strong>Enrollment Date:</strong> @Model.Student.EnrollmentDate.ToShortDateString()
</div>

<p>
    <a asp-page="./Edit" asp-route-id="@Model.Student.Id">Edit</a> |
    <a asp-page="./Delete" asp-route-id="@Model.Student.Id">Delete</a> |
    <a asp-page="./Students">Back to List</a>
</p>
