@page "{id:int}"
@model StudentManager.Pages.Students.Delete


<h2>Delete Student</h2>

<h3>Are you sure you want to delete this student?</h3>

<div>
    <strong>Name:</strong> @Model.Student.FullName
</div>
<div>
    <strong>Email:</strong> @Model.Student.Age
</div>
<div>
    <strong>Email:</strong> @Model.Student.City
</div>
<div>
    <strong>Enrolled:</strong> @Model.Student.EnrollmentDate.ToShortDateString()
</div>

<form method="post">
    <input type="hidden" asp-for="Student.Id" />
    <button type="submit">Delete</button>
    <a asp-page="./Students">Cancel</a>
</form>
