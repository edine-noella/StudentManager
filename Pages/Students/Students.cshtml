@page
@model StudentManager.Pages.Students.Students
@{
    ViewData["Title"] = "Students";
}

<h1>Student List</h1>
<a asp-area="" asp-page="./Create">Add New Student</a>

<form method="get">
    <div class="form-group">
        <input type="text" name="SearchString" value="@Model.SearchString" class="form-control" placeholder="Search by name" />
    </div>
    <button type="submit" class="btn btn-primary">Search</button>
</form>

<table class="table">
    <thead>
    <tr>
        <th>Name</th>
        <th>Age</th>
        <th>City</th>
        <th>Enrollment Date</th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var student in Model.StudentsList)
    {
        <tr>
            <td>@student.FullName</td>
            <td>@student.Age</td>
            <td>@student.City</td>
            <td>@student.EnrollmentDate.ToShortDateString()</td>
            <td>
                <a asp-page="Edit" asp-route-id="@student.Id">Edit</a> |
                <a asp-page="Details" asp-route-id="@student.Id">Details</a> |
                <a asp-page="Delete" asp-route-id="@student.Id">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>